<Window x:Class="TeamGUI.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamGUI"
        mc:Ignorable="d"
        Title="AddPersonWindow" Height="450" Width="800" FontSize="16px">
    <Grid>
        <Label Content="Social ID" HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top" />
        <Label Content="Name" HorizontalAlignment="Left" Margin="50,70,0,0" VerticalAlignment="Top"/>
        <Label Content="Surname" HorizontalAlignment="Left" Margin="50,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Birth Date" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top"/>
        <Label Content="Gender" HorizontalAlignment="Left" Margin="50,190,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbSocialID" HorizontalAlignment="center" Margin="0,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500"/>
        <TextBox x:Name="tbName" HorizontalAlignment="center" Margin="0,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500"/>
        <TextBox x:Name="tbSurname" HorizontalAlignment="center" Margin="0,114,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500"/>
        <TextBox x:Name="tbBirthDate" HorizontalAlignment="center" Margin="0,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500" />


        <Label Content="Function" Name="lbFunction" HorizontalAlignment="Left" Margin="50,230,0,0" VerticalAlignment="Top"  Visibility="Hidden"/>
        <Label Name="lbExperience" Content="Experience" HorizontalAlignment="Left" Margin="50,230,0,0" VerticalAlignment="Top"  Visibility="Hidden"/>
        <TextBox x:Name="tbExperience" HorizontalAlignment="center" Margin="0,234,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500" Visibility="Hidden"/>
        <TextBox x:Name="tbFunction" HorizontalAlignment="center" Margin="0,234,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500" Visibility="Hidden"/>
        
        <ComboBox x:Name="cbGender" HorizontalAlignment="center" Margin="0,194,0,0" VerticalAlignment="Top" Width="500">
            <TextBlock Text="Woman"></TextBlock>
            <TextBlock Text="Man"></TextBlock>
            <TextBlock Text="Other"></TextBlock>
        </ComboBox>
        <Button x:Name="bAccept" Content="Accept" HorizontalAlignment="Left" Margin="50,361,0,0" VerticalAlignment="Top" Width="300" Click="bAccept_Click" />
        <Button x:Name="bCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,361,57,0" VerticalAlignment="Top" Width="300" Click="bCancel_Click"/>
    </Grid>
</Window>
